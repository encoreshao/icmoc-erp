.page-content-wrap
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading.ui-draggable-handle
          %h3.panel-title
            = "#{current_user.display_name}#{t('tips.de')}个人#{collection.name.safe_constantize.model_name.human}"
            %span
              = link_to t('actions.new'), new_resource_path
          %ul.panel-controls
            %li
              = link_to 'javascript:void(0);', class: 'panel-collapse' do
                %span.fa.fa-angle-down
            %li
              = link_to '', class: 'panel-refresh' do
                %span.fa.fa-refresh
        .panel-body
          %table.table.table-bordered
            %thead
              %tr{role: 'row'}
                %th= collection.name.safe_constantize.human_attribute_name(:name)
                %th= collection.name.safe_constantize.human_attribute_name(:appearance)
                %th= collection.name.safe_constantize.human_attribute_name(:position)
                %th= collection.name.safe_constantize.human_attribute_name(:image)
                %th
            %tbody
              - collection.each do |resource|
                %tr
                  %td= resource.name
                  %td= resource.appearance_text
                  %td= resource.position
                  %td
                    %image{ src: resource.image.preview }
                  %td
                    = render partial: 'shared/options', locals: { resource: resource }

          = paginate collection
