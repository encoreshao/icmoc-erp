.login-container.lightmode
  .login-box.animated.fadeInDown
    .login-logo
      = t('full_title')
    .login-body
      .login-title
        %strong
          = t('tips.login_welcome')
          ,
        = t('tips.login_note')

      = simple_form_for resource, as: resource_name, url: session_path(resource_name), wrapper: :vertical_form, html: { autocomplete: 'off' } do |f|
        = f.input :email, autofocus: true, required: true, placeholder: t('tips.email'), label: false, input_html: { value: 'admin@icmoc.com' }
        = f.input :password, required: true, placeholder: t('tips.password'), label: false, input_html: { value: 'admin-123456' }
        - if devise_mapping.rememberable?
          = f.input :remember_me, as: :boolean, label: t('tips.remember_me')

        .form-group
          = f.submit t('tips.signin'), class: 'btn btn-info btn-block'

    .login-footer
      .pull-right
        &copy; #{Time.now.year} #{t('full_name')}
        %em Beta
