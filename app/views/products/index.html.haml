.page-content-wrap
  .row
    .col-md-12
      .panel.panel-default
        = render partial: 'shared/index_header'
        .panel-body
          %table.table.table-bordered
            %thead
              %tr{role: 'row'}
                %th= collection.name.safe_constantize.human_attribute_name(:name)
                %th= collection.name.safe_constantize.human_attribute_name(:model)
                %th= collection.name.safe_constantize.human_attribute_name(:brand_id)
                %th= collection.name.safe_constantize.human_attribute_name(:product_unit_id)
                %th{class: 'span2'}
            %tbody
              - collection.each do |resource|
                %tr
                  %td= resource.name
                  %td= resource.model
                  %td= resource.brand.try(:name)
                  %td= resource.product_unit.try(:name)
                  %td
                    = render partial: 'shared/options', locals: { resource: resource }

          = paginate collection
