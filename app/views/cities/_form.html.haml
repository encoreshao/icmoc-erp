= simple_form_for resource, url: url, wrapper: :horizontal_form do |f|
  = render 'form_header'
  = f.input :province_id, collection: Province.options, prompt: true
  = f.input :name, required: true
  = f.input :code
  = f.input :name_en
  = f.input :name_abbr

  = render partial: 'form_submit', locals: { f: f }
