.form-group
  .col-sm-3
  .col-md-9
    %h3
      - action = (resource.new_record? ? t('actions.new') : t('actions.edit'))
      = "#{action}#{collection.name.safe_constantize.model_name.human}"

- unless resource.errors.empty?
  .from-group.clearfix
    .col-sm-3
    .col-md-6
      .alert.alert-danger{role: 'alert'}
        %button{type: 'button', class: 'close', data: {dismiss: 'alert'}}
          %span{aria: { hidden: true }}
          %span{class: 'sr-only'}
        %strong
          = resource.errors.full_messages.join(', ')
