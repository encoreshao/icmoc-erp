.page-content-wrap
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading.ui-draggable-handle
          %h3.panel-title
            = collection.name.safe_constantize.model_name.human
            %span
              = link_to t('actions.new'), new_resource_path
          %ul.panel-controls
            %li
              = link_to 'javascript:void(0);', class: 'panel-collapse' do
                %span.fa.fa-angle-down
            %li
              = link_to '', class: 'panel-refresh' do
                %span.fa.fa-refresh
        .panel-body
          %table.table.table-bordered
            %tbody
              - collection.each_slice(2) do |resources|
                %tr
                  - resources.each do |resource|
                    %td= resource.name
                    %td
                      .btn-group
                        = link_to t('actions.edit'), edit_resource_path(resource), class: 'btn btn-primary'
                        = link_to content_tag(:span, nil, class: 'caret'), '#', class: 'btn btn-primary dropdown-toggle', :'data-toggle' => 'dropdown'
                        %ul.dropdown-menu
                          %li= link_to t('actions.destroy'), resource_path(resource), method: :delete, confirm: '您确定要删除吗？'


          = paginate collection
