= simple_form_for resource, url: url, wrapper: :horizontal_form do |f|
  = render 'form_header'

  = f.input :name, required: true
  = f.input :industry
  = f.input :nature_of_business
  = f.input :legal_person
  = f.input :bank_address
  = f.input :bank_account
  = f.input :tax_no
  = f.input :website
  - if !resource.new_record? && resource.try(:logo).present?
    .form-group.row.string.optional.company_logo
      .col-sm-3.col-form-label
      .col-md-9
        %img.img-responsive{ src: resource.logo.url }
  = f.input :logo, type: 'file'
  = f.input :telephone
  = f.input :contact_person
  .form-group.row.string.optional.company_regions
    %label.col-sm-3.col-form-label.string.optional{for: 'regions'}
      = Company.human_attribute_name(:regions)
    .col-md-9
      = f.region_select [:province, :city, :district]
  = f.input :address
  = f.input :fax
  = f.input :postcode
  = f.input :overview
  = f.input :description

  = render partial: 'form_submit', locals: { f: f }
