.page-content-wrap
  .row
    .col-md-12
      .panel.panel-default
        = render partial: 'shared/index_header'
        .panel-body
          %table.table.table-bordered
            %thead
              %tr{role: 'row'}
                %th= collection.name.safe_constantize.human_attribute_name(:name)
                %th= collection.name.safe_constantize.human_attribute_name(:industry)
                %th= collection.name.safe_constantize.human_attribute_name(:nature_of_business)
                %th= collection.name.safe_constantize.human_attribute_name(:legal_person)
                %th= collection.name.safe_constantize.human_attribute_name(:created_at)
                %th{class: 'span2'}
            %tbody
              - collection.each do |resource|
                %tr
                  %td= resource.name
                  %td= resource.industry
                  %td= resource.nature_of_business
                  %td= resource.legal_person
                  %td= resource.created_at.to_s(:db)
                  %td
                    = render partial: 'shared/options', locals: { resource: resource }

          = paginate collection
