= simple_form_for resource, url: url, wrapper: :horizontal_form do |f|
  = render 'form_header'

  = f.input :depot_alarm_value, as: :string
  = f.input :project_payment_mode, collection: Setting.project_payment_mode.values, prompt: true, required: true
  = f.input :purchase_payment_mode, collection: Setting.purchase_payment_mode.values, prompt: true, required: true

  = render partial: 'form_submit', locals: { f: f }
